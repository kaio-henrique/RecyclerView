<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TableLayout
        android:id="@+id/tab1"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/labelMatric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matricula:"
                app:bootstrapBrand="primary" />

            <TextView
                android:id="@+id/tvMatric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Matricula"
                android:textColor="#808183" />

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/labelChamado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Chamado:"
                app:bootstrapBrand="primary" />

            <TextView
                android:id="@+id/tvChamado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="chamado" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/labelNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                app:bootstrapBrand="primary" />

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Nome" />

        </TableRow>
    </TableLayout>

    <View
        android:layout_below="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@color/bootstrap_gray_light" />
</RelativeLayout>